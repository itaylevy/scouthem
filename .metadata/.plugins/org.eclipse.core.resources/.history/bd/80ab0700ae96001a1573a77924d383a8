package scouthem;

import java.util.ArrayList;

public class player_List {

	private ArrayList<player> listPlayer = new ArrayList<player>();
	/////////////////////////////////////////
	
	public player_List(player p1) {
		super();
		this.listPlayer.add(p1);
	}
	////////////////////////////////////////
	
	public ArrayList<player> getListPlayer() {
		return listPlayer;
	}
	public void setListPlayer(ArrayList<player> listPlayer) {
		this.listPlayer = listPlayer;
	}
	/////////////////////////////////////////
	
	public ArrayList<player> sortByNumOfAssists()
	{
		return listPlayer;
		
	}
	public ArrayList<player> sortByNumOfGoals()
	{
		return listPlayer;
		
	}
	public ArrayList<player> sortByRole()
	{
		return listPlayer;
		
	}
	public ArrayList<player> sortByTotalPlayingTime()
	{
		return listPlayer;
		
	}

}
