	public void singUp(String playerName, String role, int age, double height, double weight, String mail, int idPlayer, String passWord)
	{
		player_List players = new player_List();
		if((playerName!=null)&&(role!=null)&&(age!=0)&&(height!=0)&&(weight!=0)&&(mail!=null)&&(idPlayer!=0)&&(passWord!=null))
